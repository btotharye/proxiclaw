# OpenClaw Ansible Configuration
# Copy this file to all.yml and customize for your deployment

# SSH settings
ansible_user: "ubuntu"
ansible_ssh_private_key_file: "~/.ssh/id_rsa"

# OpenClaw repository and version
openclaw_git_repo: "https://github.com/openclaw/openclaw.git"
openclaw_git_branch: "main"  # or specific version tag

# OpenClaw service configuration
openclaw_port: 18789
openclaw_install_dir: "/opt/openclaw"

# AI Provider Configuration
# Primary provider for coding (GitHub Copilot+ requires interactive OAuth setup after deployment)
# Options:
#   "copilot" - GitHub Copilot+ subscription (recommended if you have Copilot+)
#   "openai" - OpenAI with API key
#   "api_keys_only" - Use API keys for all providers
# Note: Claude/Anthropic only supports API keys (no OAuth available)
# See docs/AI_PROVIDER_SETUP.md for setup instructions
primary_ai_provider: "copilot"  # Change to your preferred provider

# API Keys (used for api_keys_only mode or as fallbacks)
# For GitHub Copilot+, leave these empty and configure interactively
# For Claude/Anthropic, you must use API keys
anthropic_api_key: ""  # Your Claude API key (sk-ant-...) - required if using Claude
openai_api_key: ""     # Your OpenAI API key (sk-...)

# Web Service API Keys (optional)
# These enable web search and other online tools
braveapi_key: ""       # Brave Search API (https://brave.com/search/api/)
serper_api_key: ""     # Serper.dev Google Search API (https://serper.dev/)
firecrawl_api_key: ""  # Firecrawl web scraping API (https://firecrawl.dev/)

# Default model settings
# Set the default model ID to use
# Examples: "anthropic/claude-sonnet-4-6", "gpt-4o", "anthropic/claude-haiku-3"
# Recommended: "anthropic/claude-sonnet-4-6" (best balance for coding)
# Budget options: "anthropic/claude-haiku-3" (75% cheaper) or "gpt-4o-mini" (90% cheaper)
openclaw_default_model: ""  # Leave empty to not set a default

# Backup settings (optional but recommended)
# GitHub repo to store OpenClaw config backups
# Example: "git@github.com:yourusername/openclaw-config-backup.git"
# Leave empty to disable automated backups
openclaw_backup_repo: ""

# Backup schedule (cron format) - default: daily at 2 AM
openclaw_backup_cron_minute: "0"
openclaw_backup_cron_hour: "2"
openclaw_backup_cron_day: "*"
openclaw_backup_cron_weekday: "*"
