# Environment Configuration Example
# Copy this file to .env and fill in your values

# Proxmox Configuration
PROXMOX_HOST=192.168.1.100:8006
PROXMOX_API_TOKEN_ID=root@pam!terraform
PROXMOX_API_TOKEN_SECRET=your-secret-token-here
PROXMOX_NODE=pve

# VM Configuration
VM_NAME=openclaw-vm
VM_CORES=4
VM_MEMORY=8192
VM_DISK_SIZE=50G
VM_TEMPLATE=ubuntu-2204-cloudinit

# Network Configuration
VM_IP=  # Leave empty for DHCP or set static IP like: 192.168.1.150/24,gw=192.168.1.1
VM_BRIDGE=vmbr0

# SSH Configuration
SSH_PUBLIC_KEY_PATH=~/.ssh/id_rsa.pub

# OpenClaw Configuration
OPENCLAW_VERSION=latest
OPENCLAW_PORT=8080
NODE_ENV=production

# Database Configuration (if needed)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=openclaw
DB_USER=openclaw
DB_PASSWORD=change-this-password

# Redis Configuration (if needed)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Application Secrets
SECRET_KEY=generate-a-random-secret-key-here
JWT_SECRET=generate-another-random-secret-here
API_KEY=your-api-key-here

# Email Configuration (if needed)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@example.com

# Storage Configuration
STORAGE_TYPE=local  # or s3, gcs, azure
S3_BUCKET=
S3_REGION=
S3_ACCESS_KEY=
S3_SECRET_KEY=

# Monitoring (optional)
SENTRY_DSN=
PROMETHEUS_ENABLED=false

# Logging
LOG_LEVEL=info  # debug, info, warn, error
